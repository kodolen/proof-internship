{% if page.header.custom_text_fields %}

    {% for text in page.header.custom_text_fields %}

        <div class="row">
            <div class="column small-12 medium-4 medium-offset-4">
                <div class="content-block-text">

                    {% if text.title %}

                        <h2>{{ text.title }}</h2>

                    {% endif %}

                    {% if text.caption %}

                        <span class="caption">{{ text.caption }}</span>

                    {% endif %}

                    {% if text.textarea %}

                        <p>{{ text.textarea }}</p>

                    {% endif %}

                </div>
            </div>
        </div>

    {% endfor %}

{% endif %}
