{% if page.title or page.content %}

    <div class="top-content">
        <div class="row">
            <div class="column medium-4 medium-offset-1">

                {% if page.title %}

                    <h1>{{ page.title }}</h1>

                {% endif %}

                {% if page.content %}

                    <p>{{ page.content }}</p>

                {% endif %}

            </div>
        </div>
    </div>

{% endif %}
