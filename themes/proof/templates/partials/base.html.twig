{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
    {% block head %}
        <meta charset="utf-8"/>
        <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% include 'partials/metadata.html.twig' %}

        <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}"/>
        <link rel="canonical" href="{{ page.url(true, true) }}"/>

        {% block stylesheets %}
            {% do assets.addCss('theme://css/custom.css') %}
            {% do assets.addCss('theme://css-compiled/style-proof.css', 1) %}
        {% endblock %}
        {{ assets.css() }}

    {% endblock head %}
</head>
<body id="top" class="{{ page.header.body_classes }} page-{{ header.slug }}">

{% include 'partials/hamburger.html.twig' %}

{% block header %}
    <div class="header">
        <div class="wrapper padding">
            {% block header_navigation %}
                <nav class="main-nav">
                    {% include 'partials/navigation.html.twig' %}
                </nav>
            {% endblock %}
        </div>
    </div>
{% endblock %}


{% block body %}
    <section id="body">
        <div class="wrapper padding">
            {% block content %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <div class="footer text-center">

            {% include 'layout/footer.html.twig' %}

    </div>
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('jquery', 4) %}
    {% do assets.addJs('node_modules/swiper/dist/js/swiper.min.js', 3) %}
    {% do assets.addJs('node_modules/waypoints/lib/jquery.waypoints.min.js', 2) %}
    {% do assets.addJs('node_modules/typed.js/lib/typed.min.js', 5) %}
    {#{% do assets.addJs('https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.2.2/js/swiper.min.js', 2) %}#}
    {% do assets.addJs('theme://js/app.js', 1) %}
{% endblock %}
{{ assets.js() }}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}


</body>
</html>
