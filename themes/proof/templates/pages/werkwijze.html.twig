{% extends 'partials/base.html.twig' %}

{% block content %}

    {% include 'elements/top-content.html.twig' %}

    <div class="container">

        {% if page.header.custom_text_fields %}

            {% for text in page.header.custom_text_fields %}

                <div class="row">
                    <div class="column medium-4 medium-offset-4">
                        <div class="content-block-text" data-accordion-holder>
                            <div class="row">

                                {% if text.image %}

                                    <div class="column medium-2">

                                        <img src="{{ (text.image|first).path }}" alt=""/>

                                    </div>

                                {% endif %}

                                {% if text.title and text.caption %}

                                    <div class="column medium-6">

                                        <h2>{{ text.title }}</h2>

                                        <span class="caption">{{ text.caption }}</span>

                                    </div>

                                {% endif %}

                            </div>

                            {% if text.preview %}

                                <div class="row">
                                    <div class="column medium-12">

                                        <p>{{ text.preview }}</p>

                                        <p class="accordion-text hidden holder">

                                            {{ text.textarea }}

                                            <span class="overlay"></span>

                                        </p>

                                        <span class="link" data-accordion-button>Lees meer</span>

                                    </div>
                                </div>

                            {% endif %}

                        </div>
                    </div>
                </div>

            {% endfor %}

        {% endif %}

        {% if page.header.summary and page.header.summary_title and page.header.summary_preview %}

            <div class="summary-wrapper">
                <div class="row">
                    <div class="column medium-8 medium-offset-2">

                        <h2>{{ page.header.summary_title }}</h2>

                        <p> {{ page.header.summary_preview }} </p>

                        <p class="accordion-text hidden holder">

                            {{ page.header.summary }}

                            <span class="overlay"></span>

                        </p>

                        <span class="link" data-accordion-button>Lees meer</span>

                    </div>
                </div>
            </div>

        {% endif %}

        <div class="bottom-content">
            <div class="row">
                <div class="column medium-8 medium-offset-2">

                    {#TODO Add translations or via admin panel#}
                    <span class="caption">Gebruikte Programmeertalen:</span>

                    <div class="logo-wrapper">

                        {% for logo in page.header.programming_logos %}

                            <img src="{{ (logo.logo|first).path }}"/>

                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}

